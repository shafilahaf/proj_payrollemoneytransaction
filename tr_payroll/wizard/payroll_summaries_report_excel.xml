<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payroll_summaries_excel_report_wizard_view_form" model="ir.ui.view">
        <field name="name">payroll.summaries.excel.report.wizard.view.form</field>
        <field name="model">payroll.summaries.report.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="department_id" />
                        <field name="category_id" />
                        <field name="employee_id" />
                        <field name="month" />
                        <field name="year" />
                        <field name="month_text" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Payroll Summaries" name="payroll_summaries_report" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
