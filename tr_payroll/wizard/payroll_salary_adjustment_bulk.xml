<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_payroll_salary_adjustment_import_wizard" model="ir.ui.view">
        <field name="name">payroll.salary.adjustment.bulk.wizard.wizard.form</field>
        <field name="model">payroll.salary.adjustment.bulk.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Employee Adjustments">
                <group>
                    <field name="file" widget="binary" string="Excel File" />
                </group>
                <footer>
                    <button string="Import" type="object" name="upload_and_confirm" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
