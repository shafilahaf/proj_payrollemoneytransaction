<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payroll_shift_assign_wizard_view_form" model="ir.ui.view">
        <field name="name">payroll.shift.assign.wizard.view.form</field>
        <field name="model">payroll.shifts.assign.import.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="excel_file" />
                    </group>
                </sheet>
                <footer>
                    <button name="import_excel" string="Upload" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
