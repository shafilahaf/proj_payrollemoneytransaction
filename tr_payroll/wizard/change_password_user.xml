<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_users_password_wizard_form" model="ir.ui.view">
        <field name="name">res.users.password.wizard.form</field>
        <field name="model">res.users.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Password">
                <group>
                    <!-- <field name="current_password" password="True"/> -->
                    <field name="new_password" password="True" options="{'show_or_hide': True}"/>
                    <field name="confirm_password" password="True" options="{'show_or_hide': True}"/>
                </group>
                <footer>
                    <button string="Change Password" type="object" name="action_change_password" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>